<style>
    .migalha-pai {
        background-color: #ffffff;
        border-bottom: solid 1px #dddddd;
        padding: 6px 10px 6px 15px;
        z-index: 1000;
        font-size: 11px;
        max-height: 43px;
        min-height: 43px;
        margin-bottom: 10px;
        left: 0;
        right: 0;
        box-shadow: 0 0 5px 1px #c3c3c3;
    }

        .migalha-pai > .migalha-conteudo > span,
        .migalha-pai > .migalha-conteudo > a {
            color: #676767;
            font-size: 11px;
            margin-top: 18px;
        }

    .link-inativo {
        text-decoration: none;
        color: #ccc;
    }

    .migalha-conteudo {
        margin-top: 8px;
    }

    .migalhas {
        left: -2px;
        right: 0;
        z-index: 10;
    }

    .separador {
        border-left: 1px solid #dddddd;
        width: 1px;
        height: 26px;
        margin-right: 10px;
        margin-left: 10px;
        /*padding-top: 1px;
                padding-bottom: 1px;*/
    }

    .navbar-subnavbar .botao-subnavbar {
        border: none;
        background-color: inherit;
        border-radius: 4px;
        padding: 2px 8px;
    }

    .btn-opcoes-migalhas {
        border: none;
        border-radius: 2px;
        box-shadow: 0 1px 3px rgba(0,0,0,.12), 0 1px 2px rgba(0,0,0,.24);
        transition: all .3s cubic-bezier(.25,.8,.25,1),box-shadow .3s cubic-bezier(.25,.8,.25,1);
        margin-left: 2px;
        margin-right: 2px;
        z-index: 11;
    }

    .btn-opcoes-migalhas-notificacao {
        border: none;
        border-bottom-left-radius: 0px;
        border-top-left-radius: 0px;
        border-bottom-right-radius: 2px;
        border-top-right-radius: 2px;
        background-color: orange;
        padding-left: 0px;
        /*box-shadow: 0 1px 3px rgba(0,0,0,.12), 0 1px 2px rgba(0,0,0,.24);*/
        /*box-shadow: -0.1rem 0 0 0.2rem rgba(134, 142, 150, 0.5);*/
        transition: all .3s cubic-bezier(.25,.8,.25,1),box-shadow .3s cubic-bezier(.25,.8,.25,0);
        /*margin-left: 2px;*/
        margin-right: 2px;
        z-index: 11;
    }

    .btn-opcoes-migalhas:focus {
        outline: none;
    }

    .center-block {
        margin-top: 15px;
    }
}
</style>

<div class="row">
    <nav aria-label="breadcrumb" class="migalhas" style="">
        <div class="migalha-pai">
            <div class="migalha-conteudo">
                @if (ChildContent == null)
                {
                    <a class="migalha-subnavbar item-subnavbar link-inativo" href="/counter" title="Home">Home</a>
                    <span class="separador-migalhas-subnavbar">&gt;</span>
                }
                else
                {
                    <a class="migalha-subnavbar item-subnavbar link-inativo" href="/fetchdata" title="Home">@ChildContent</a>
                    <span class="separador-migalhas-subnavbar">&gt;</span>
@*                     <a class="migalha-subnavbar item-subnavbar" href="@(urlHome ?? Url.Action("Dashboard", "Home", new { Area = "" }))" title="@(textHome ?? "Home")">Home</a>
                    <span class="separador-migalhas-subnavbar">&gt;</span>
                    foreach (var c in @caminhoLabelLink)
                    {
                        <a class="migalha-subnavbar item-subnavbar" href="@c.Value" title="@c.Key">@c.Key</a>
                        <span class="separador-migalhas-subnavbar">&gt;</span>
                    } *@
                }

                <ul class="nav navbar-nav navbar-right" id="botoes-opcoes-migalhas" style="margin-right:2px">
                </ul>
            </div>
        </div>
    </nav>
</div>

@code {
    [Parameter]
    public string ID { get; set; }
    [Parameter]
    public string urlHome { get; set; }
    [Parameter]
    public string textHome { get; set; }
    [Parameter]
    public IDictionary<string,string> caminhoLabelLink { get; set; } 
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}